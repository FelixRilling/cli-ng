{
    "name": "cli-ngy",
    "version": "9.0.1",
    "description": "A module to parse cli-input text and commands with support for nested commands and did-you-mean feature",
    "main": "dist/clingy.common.js",
    "module": "dist/clingy.esm.js",
    "types": "types/main.d.ts",
    "settings": {
        "input": "main.ts",
        "namespace": {
            "module": "Clingy",
            "file": "clingy"
        },
        "external": [
            "lightdash",
            "similar-strings"
        ]
    },
    "scripts": {
        "start": "npm-run-all lint build test docs",
        "build": "rollup -c ./tasks/rollup.config.js",
        "build:iife": "rollup -c ./tasks/rollup.config.iife.js",
        "build:iife-min": "rollup -c ./tasks/rollup.config.iife-min.js",
        "watch": "rollup -c ./tasks/rollup.config.js --watch",
        "dist": "npm-run-all --parallel build build:iife build:iife-min",
        "lint": "npm-run-all --parallel lint:ts lint:es",
        "lint:ts": "tslint ./src/**/*.ts",
        "lint:es": "eslint ./spec/**/*.js",
        "fix": "npm-run-all fix:ts fix:es fix:prettier",
        "fix:ts": "tslint ./src/**/*.ts --fix",
        "fix:es": "eslint ./spec/**/*.js --fix",
        "fix:prettier": "prettier ./src/**/* ./spec/**/* --write",
        "test": "jasmine",
        "docs": "jsdoc -c jsdoc.json"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/cli-ngy.git"
    },
    "keywords": [
        "cli",
        "input",
        "text"
    ],
    "author": "Felix Rilling",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/FelixRilling/cli-ngy/issues"
    },
    "homepage": "https://github.com/FelixRilling/cli-ngy#readme",
    "dependencies": {
        "lightdash": "^8.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0-beta.51",
        "@babel/plugin-external-helpers": "^7.0.0-beta.51",
        "@babel/preset-env": "^7.0.0-beta.51",
        "docdash": "^0.4.0",
        "eslint": "^5.0.0",
        "jasmine": "^3.1.0",
        "jsdoc": "^3.5.5",
        "npm-run-all": "^4.1.3",
        "prettier": "^1.13.5",
        "rollup": "^0.61.2",
        "rollup-plugin-babel": "^4.0.0-beta.5",
        "rollup-plugin-node-resolve": "^3.3.0",
        "rollup-plugin-typescript2": "^0.15.0",
        "rollup-plugin-uglify-es": "0.0.1",
        "tslint": "^5.10.0",
        "typescript": "^2.9.2",
        "uglify-es": "^3.3.10"
    }
}
